<h1>Existing Users</h1>
 
<table>
  <tr>
    <th>Name</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name , user_path(user)  %></td>
	  <td><%= link_to "Delete" , user_path(user), method: :delete, data: {confirm: 'Are you sure?'}  %></td>
    </tr>
  <% end %>
</table>
