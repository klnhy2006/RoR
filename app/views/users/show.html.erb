<h1><%= @user.name%></h1>

<%= form_for([@user, @user.postings.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

	<h2>Posts</h2>
	<% if @user.postings.any? %>
		<%= render @user.postings %>
	<% end %>
  

<%= link_to 'Back to User List', {:action => 'index'}%>